{
    "manifest_version": 2,
  
    "name": "Seattle Humane PetPoint Extension",
    "description": "Adds Seattle Humane specific functionality on top of the PetPoint frontend.",
    "author": "Dan Bjorge <dbjorge@gmail.com>",
    "version": "1.0",

    "icons": {
        "16": "images/icon-16x16.png",
        "24": "images/icon-24x24.png",
        "32": "images/icon-32x32.png",
        "64": "images/icon-64x64.png",
        "128": "images/icon-128x128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://sms.petpoint.com/sms3/*"],
            "js": ["script/content_script.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "script/injected_script.js"
    ]
  }